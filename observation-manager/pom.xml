<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>de.lehmannet.om</groupId>
  <artifactId>observation-manager</artifactId>
  <version>0.0.1-SNAPSHOT</version>
  <name>observation-manager</name>
  <description>observation-manager</description>
  <properties>
    <eap.fits.version>1.3</eap.fits.version>
    <observation.planner.api.version>0.0.1-SNAPSHOT</observation.planner.api.version>
    <xalan.version>2.7.2</xalan.version>

    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <maven.compiler.target>1.8</maven.compiler.target>
    <maven.compiler.source>1.8</maven.compiler.source>
  </properties>
  <dependencies>
    <dependency>
      <groupId>de.lehmannet.com</groupId>
      <artifactId>observation-planner-api</artifactId>
      <version>${observation.planner.api.version}</version>
    </dependency>
    <dependency>
      <groupId>eap.fits</groupId>
      <artifactId>fits</artifactId>
      <version>${eap.fits.version}</version>
    </dependency>
    <dependency>
      <groupId>xalan</groupId>
      <artifactId>xalan</artifactId>
      <version>${xalan.version}</version>
    </dependency>

  </dependencies>
  <build>
    <finalName>observation-manager</finalName>

    <resources>
      <resource>
        <directory>src/main/resources</directory>
        <filtering>true</filtering>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
            <configuration>
              <archive>
                <manifest>
                  <mainClass>
                    de.lehmannet.om.ui.navigation.ObservationManager
                  </mainClass>
                </manifest>
              </archive>
              <descriptorRefs>
                <descriptorRef>jar-with-dependencies</descriptorRef>
              </descriptorRefs>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
