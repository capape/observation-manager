    <fileSet>
      <directory>../observation-planner-api/src/main/resources</directory>
      <outputDirectory>classpath</outputDirectory>
      <includes>
          <include>**/*</include>
      </includes>		
    </fileSet>
  -->
    <fileSet>
      <directory>../</directory>
      <outputDirectory></outputDirectory>
      <includes>
          <include>LICENSE</include>
          <include>README.md</include>
      </includes>		
    </fileSet>
    <fileSet>
      <directory>../launchers</directory>
      <outputDirectory></outputDirectory>
      <includes>
          <include>obs.*</include>          
      </includes>		
    </fileSet>
  </fileSets>
</assembly>