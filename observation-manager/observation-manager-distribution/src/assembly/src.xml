<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 http://maven.apache.org/xsd/assembly-2.1.0.xsd">
  <id>distribution</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  
  <fileSets> 
    <fileSet>
      <directory>../skychart-extension/target/</directory>
      <outputDirectory>extensions</outputDirectory>
      <includes>
          <include>*.jar</include>
      </includes>		
    </fileSet>
    <fileSet>
        <directory>../deepsky-extension/target/</directory>
        <outputDirectory>extensions</outputDirectory>
        <includes>
            <include>*.jar</include>
        </includes>		
      </fileSet>
    <fileSet>
      <directory>../observation-manager-app/target/</directory>
      <outputDirectory>classpath</outputDirectory>
      <includes>
          <include>*jar-with-dependencies.jar</include>
      </includes>		
    </fileSet>

    <fileSet>
      <directory>../observation-manager-app/src/main/resources/catalog</directory>
      <outputDirectory>catalog</outputDirectory>
      <includes>
          <include>**/*</include>
      </includes>		
    </fileSet>

    <fileSet>
      <directory>../observation-manager-app/src/main/resources/help</directory>
      <outputDirectory>help</outputDirectory>
      <includes>
          <include>**/*</include>
      </includes>		
    </fileSet>

    <fileSet>
      <directory>../observation-planner-api/src/main/resources/schema</directory>
      <outputDirectory>schema</outputDirectory>
      <includes>
          <include>**/*</include>
      </includes>		
    </fileSet>
    
    <fileSet>
      <directory>../observation-manager/src/main/resources</directory>
      <outputDirectory>classpath</outputDirectory>
      <includes>
          <include>log4j2.xml</include>
      </includes>		
    </fileSet>
