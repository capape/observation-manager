<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.1.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.1.0 http://maven.apache.org/xsd/assembly-2.1.0.xsd">
    <id>distribution</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <fileSets>
        <fileSet>
            <directory>../observation-manager-app/target/</directory>
            <outputDirectory>classpath</outputDirectory>
            <includes>
                <include>*jar-with-dependencies.jar</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>../observation-manager-app/src/main/static-resources/catalog</directory>
            <outputDirectory>catalog</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../observation-manager-app/src/main/static-resources/xsl</directory>
            <outputDirectory>xsl</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../observation-manager-app/src/main/static-resources/help</directory>
            <outputDirectory>help</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../observation-manager-app/src/main/static-resources/images</directory>
            <outputDirectory>images</outputDirectory>
            <includes>
                <include>splash.png</include>
                <include>splash_transparent.png</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>../observation-planner-api/src/main/resources/schema</directory>
            <outputDirectory>classpath/schema</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>           
        </fileSet>

        <fileSet>
            <directory>../observation-planner-api/src/main/resources/schema</directory>
            <outputDirectory>schema</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>           
        </fileSet>          

        <fileSet>
            <directory>../observation-manager/src/main/resources</directory>
            <outputDirectory>classpath</outputDirectory>
            <includes>
                <include>log4j2.xml</include>
            </includes>
        </fileSet>
       
        <fileSet>
            <directory>../</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>LICENSE</include>
                <include>README.md</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../launchers</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>obs.*</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>