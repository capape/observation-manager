<?xml version="1.0" encoding="UTF-8"?>
<Configuration monitorInterval="30">


%encode{ %.-500m }{CRLF}%n
    <Properties>
        <Property name="custom-pattern-layout">%highlight{[%d{yyyy.MM.dd HH:mm:ss.SSS}] %-5p [%t] %25c{1.}.%M  - %encode{ %.-500m}{CRLF}%n}</Property>
        <Property name="custom-file-pattern-layout">[%d{yyyy.MM.dd HH:mm:ss.SSS}] %-5p [%t] %25c{1.}.%M  - %encode{ %.-500m}{CRLF}%n</Property>
    </Properties>

    <Appenders>
        <Console name="console" target="SYSTEM_OUT">
            <PatternLayout pattern="${custom-pattern-layout}"/>
        </Console>
        <File name="obs" fileName=".logs/obs.log" append="false">            
            <PatternLayout pattern="${custom-file-pattern-layout}"/>
        </File>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="obs" />                     
            <AppenderRef ref="console" />   
        </Root>

        <Logger name="org.apache.xerces" level="info" additivity="false">
            <AppenderRef ref="obs" />
            <AppenderRef ref="console" />                        
        </Logger>
        <Logger name="org.xml.sax" level="info" additivity="false">
            <AppenderRef ref="obs" />
            <AppenderRef ref="console" />                        
        </Logger>
        <Logger name="de.lehmannet.om" level="info" additivity="false">
            <AppenderRef ref="obs" />
            <AppenderRef ref="console" />                        
        </Logger>        
        <Logger name="de.lehmannet.om.ui.image.ImageClassLoaderResolverImpl" level="info" additivity="false">
            <AppenderRef ref="obs" />
            <AppenderRef ref="console" />                        
        </Logger>        
                
        
    </Loggers>

</Configuration>
